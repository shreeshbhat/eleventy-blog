<ul class="postlist-grid">
{% for post in postslist | reverse %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <a href="{{ post.url | url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
    <div>
      <time class="postlist-date" datetime="{{ helpers.getHtmlDate(post.date) }}">{{ helpers.getReadableDate(post.date) }}</time>
      {% for tag in post.data.tags %}
        {%- if collections.tagList.indexOf(tag) != -1 -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
        {%- endif -%}
      {% endfor %}
    <br/>
    <small> {{ helpers.formatReadingTime(post.templateContent) }} {{ helpers.getReadingTime(post.templateContent) }} minute read</small>
    </div>
  </li>
{% endfor %}
</ul>
